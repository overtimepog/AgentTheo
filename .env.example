# Theo Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED: API Configuration
# =============================================================================

# OpenRouter API key - REQUIRED
# Get your key at: https://openrouter.ai/keys
THEO_OPENROUTER_API_KEY=your_openrouter_api_key_here

# =============================================================================
# OPTIONAL: Model Configuration
# =============================================================================

# Default LLM model (default: anthropic/claude-sonnet-4)
# THEO_MODEL=anthropic/claude-sonnet-4

# Embedding model for semantic memory (default: openai/text-embedding-3-small)
# THEO_EMBEDDING_MODEL=openai/text-embedding-3-small

# =============================================================================
# OPTIONAL: Path Configuration
# =============================================================================

# Data directory for checkpoints, sessions, and memories (default: ~/.theo)
# THEO_DATA_DIR=~/.theo

# =============================================================================
# OPTIONAL: Behavior Configuration
# =============================================================================

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL (default: INFO)
# THEO_LOG_LEVEL=INFO

# Auto-checkpoint interval in seconds (default: 60)
# THEO_CHECKPOINT_INTERVAL=60

# =============================================================================
# OPTIONAL: Resume Behavior
# =============================================================================

# Show summary when resuming a session (default: true)
# THEO_RESUME_SHOW_SUMMARY=true

# Show summary if last active more than N minutes ago (default: 5)
# THEO_RESUME_SUMMARY_AFTER_MINUTES=5
