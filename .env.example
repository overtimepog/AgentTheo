# Theo Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# OpenRouter API
# =============================================================================
THEO_OPENROUTER_API_KEY=a_key_here
THEO_OPENROUTER_MODEL=arcee-ai/trinity-mini
THEO_OPENROUTER_EMBEDDING_MODEL=openai/text-embedding-3-large
# =============================================================================

# =============================================================================
# Semantic Memory System
# =============================================================================
# Path to store the vector database (default: ~/.theo/vectordb/)
THEO_VECTORDB_PATH=~/.theo/vectordb/

# Enable/disable memory system (default: true)
THEO_MEMORY_ENABLED=true

# Number of memories to auto-retrieve for context (default: 5)
THEO_MEMORY_AUTO_RETRIEVE_K=5

# Enable/disable auto-retrieval of relevant memories (default: true)
THEO_MEMORY_AUTO_RETRIEVE_ENABLED=true

# =============================================================================